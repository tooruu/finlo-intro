{
    "preset": "laravel",
    "rules": {
        "blank_line_before_statement": false,
        "combine_consecutive_issets": true,
        "not_operator_with_successor_space": false,
        "self_accessor": true,
        "simplified_null_return": true,
        "trailing_comma_in_multiline": {
            "elements": ["arguments", "arrays", "match", "parameters"]
        }
    }
}
